@{
    var username = Context.Session.GetString("UserName");
    var role = Context.Session.GetString("Role");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaBookingSystem</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaBookingSystem.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">CinemaBookingSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">🏠 Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Movies/Index">🎬 Filmoversigt</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Showtimes/Index">🕒 Visninger</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Bookings/Index">📖 Dine Bookinger</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Privacy">🛡️ Privacy</a></li>

                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item">
                                <span class="nav-link">👋 Hej, @username (@role)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Logout">🚪 Log ud</a>
                            </li>

                            @if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Movies/Create">➕ Opret Film</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/ShowTimes/Create">🕒 Opret Visning</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login">🔐 Log ind</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1 py-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-auto">
        <div class="container">
            &copy; 2025 - CinemaBookingSystem - <a asp-page="/Privacy" class="text-light">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
