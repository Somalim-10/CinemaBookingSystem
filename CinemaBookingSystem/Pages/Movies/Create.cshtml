@page
@model CinemaBookingSystem.Pages.Movies.CreateModel

@{
    ViewData["Title"] = "Opret Film";
}

<h1>Opret ny film</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Movie.Title" class="control-label"></label>
        <input asp-for="Movie.Title" class="form-control" />
        <span asp-validation-for="Movie.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Movie.Genre" class="control-label"></label>
        <input asp-for="Movie.Genre" class="form-control" />
        <span asp-validation-for="Movie.Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Movie.Description" class="control-label"></label>
        <input asp-for="Movie.Description" class="form-control" />
        <span asp-validation-for="Movie.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Movie.DurationMinutes" class="control-label"></label>
        <input asp-for="Movie.DurationMinutes" class="form-control" type="number" />
        <span asp-validation-for="Movie.DurationMinutes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Movie.ImageUrl" class="control-label"></label>
        <input asp-for="Movie.ImageUrl" class="form-control" placeholder="https://..." />
        <span asp-validation-for="Movie.ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="➕ Opret film" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <a asp-page="Index">⬅️ Tilbage til liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
